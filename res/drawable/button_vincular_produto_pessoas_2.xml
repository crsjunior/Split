<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape android:shape="oval">

			<solid
				android:color="@color/coral_reef_amethysis_dark" />

			<stroke
				android:width="1dp"
				android:color="@color/coral_reef_amethysis_dark"/>

			<padding
				android:bottom="0dp"
				android:left="0dp"
				android:right="0dp"
				android:top="0dp"/>
		</shape>
	</item>

	<item>
		<shape android:shape="oval">

			<solid
				android:color="@color/coral_reef_amethysis_light" />

			<stroke
				android:width="1dp"
				android:color="@color/coral_reef_amethysis_dark"/>

			<padding
				android:bottom="0dp"
				android:left="0dp"
				android:right="0dp"
				android:top="0dp"/>
		</shape>
	</item>

</selector>